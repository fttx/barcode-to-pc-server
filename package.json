{
  "name": "barcode-to-pc-server",
  "description": "Barcode to PC server",
  "keywords": [
    "barcode",
    "app",
    "remote"
  ],
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Filippo Tortomasi",
    "email": "filippo.tortomasi@gmail.com.com",
    "url": "https://github.com/fttx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fttx/barcode-to-pc-server.git"
  },
  "main": "electron/main.js",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "tsc": "tsc",
    "lint": "ng lint",
    "test": "ng test",
    "e2e": "ng e2e",
    "browser": "ng serve",
    "browser:keep-dist": "ng serve --delete-output-path=false",
    "electron": "electron ./dist/electron/main.js",
    "electron-dev": "electron ./dist/electron/main.js --dev",
    "build:main": "tsc --project tsconfig.electron.json",
    "build:main:watch": "tsc -w --project tsconfig.electron.json",
    "build": "ng build --prod --output-path=dist && npm run build:main && copyfiles package.json dist && copyfiles node_modules dist",
    "start": "npm run build:main && npm-run-all --parallel browser electron-dev",
    "watch": "npm-run-all --parallel build:main:watch browser:keep-dist",
    "prepare:dist": "electron-builder install-app-deps && ng build --prod --output-path=dist && tsc --project tsconfig.electron.json && copyfiles package.json dist && cd dist && npm install --prod && cd .. && copyfiles -f electron-resources/* dist/build/",
    "dist": "npm run prepare:dist && build --project dist",
    "fix-sass": "npm rebuild node-sass",
    "publish": "npm run prepare:dist && build --project dist -p always",
    "publish-win": "npm run prepare:dist && build --win --ia32 --x64 --project dist -p always",
    "publish-mac": "npm run prepare:dist && build -m --project dist -p always",
    "publish-linux": "npm run prepare:dist && build -l --project dist -p always",
    "publish-ml": "npm run prepare:dist && build -ml --project dist -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "private": true,
  "build": {
    "compression": "maximum",
    "appId": "com.barcodetopc.server",
    "productName": "Barcode to PC server",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis-web",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "installerSidebar": "build/MUI_WELCOMEFINISHPAGE_BITMAP.bmp",
      "shortcutName": "Barcode to PC server",
      "artifactName": "${name}.v${version}.${os}.setup.${ext}"
    }
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19",
    "angular2-qrcode": "^2.0.1",
    "bonjour": "^3.5.0",
    "bootstrap-sass": "^3.3.7",
    "electron-updater": "^2.18.2",
    "file-saver": "^1.3.3",
    "mdns": "^2.3.3",
    "network": "^0.3.2",
    "ng2-dragula": "^1.5.0",
    "ngx-bootstrap": "^1.9.3",
    "ngx-clipboard": "^3.0.7",
    "papaparse": "^4.1.2",
    "robotjs": "^0.4.7",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "@angular/cli": "1.6.5",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/bonjour": "^3.5.5",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3",
    "@types/papaparse": "^4.1.28",
    "@types/express": "^4.0.37",
    "@types/file-saver": "0.0.0",
    "@types/ws": "^3.2.0",
    "copyfiles": "1.2.0",
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "electron-log": "^2.2.11",
    "npm-run-all": "^4.1.1"
  }
}
